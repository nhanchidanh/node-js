<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node js basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>

<body>


    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div style="padding-left:16px">
        <h2>List Users:</h2>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Action</th>
                    <!-- <th scope="col">Email</th>
                <th scope="col">Address</th> -->
                </tr>
            </thead>
            <tbody>
                <%= test%>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>

                        <th scope="row">
                            <%= dataUser[i].id %>
                        </th>
                        <td>
                            <%= dataUser[i].firstName %>
                        </td>
                        <td>
                            <%= dataUser[i].lastName %>
                        </td>
                        <td>
                            <a class="btn btn-outline-primary" href="/detail/user/<%= dataUser[i].id %>">Detail</a>
                            <a class="btn btn-outline-primary" href="/detail/user/<%= dataUser[i].id %>">Edit</a>
                            <a class="btn btn-outline-primary" href="/detail/user/<%= dataUser[i].id %>">Delete</a>
                            
                        </td>

                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

</body>

</html>